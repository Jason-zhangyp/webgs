<!-- Modal -->
<div class="modal fade" id="{{id}}" tabindex="-1" role="dialog" aria-labelledby="modal-max" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="input-group input-group-sm mb-3" style="margin-right:30px;">
                <div id="{{id}}-max" type="button" class="btn-sm" style="width:84px;">Max: </div>
                <input id="{{id}}-max-input" style="text-align:center;" type="number" value="{{value}}" min="0" aria-label="max" class="form-control">
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="{{id}}-save" type="button" class="btn btn-primary">Save changes</button>
        </div>
        </div>
    </div>
</div>
